@using QuanLyCuaHangDoChoiOnline.Models
@model dynamic

@{
    ViewData["Title"] = "Home";
}

<div id="main">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/banner-image-2-1920x500.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images//banner-image-3-1920x500.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/banner-image-4-1920x500.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br>
    <br>
    <div class="inner">
        <header id="inner">
            <h1 style="text-align:center">Chào mừng bạn đến với website</h1>
            <p>Gunpla, viết tắt của Gundam Plastic Model, là một loại mô hình lắp ráp được sản xuất dựa trên các máy chiến đấu huyền thoại trong vũ trụ Gundam.
                Gunpla không chỉ là một sản phẩm lắp ráp thông thường, mà còn là một nghệ thuật tự tạo và biểu đạt sự tôn vinh cho tình yêu đối với series Gundam.</p>
        </header>
        <br>
        <h2 class="h2">Sản phẩm nổi bật</h2>
        <section class="tiles">
            @foreach (var item in Model.toy)
            {
                <article class="style1">
                    <span class="image">
                        <a  asp-controller="Toy" asp-action="Details" asp-route-ID="@item.ToyID"><img src="images/@item.Image" alt="" width="300" height="325" /></a>
                    </span>
                    <a asp-controller="Toy" asp-action="Details" asp-route-ID="@item.ToyID">
                        <h2>
                            @item.ToyName
                        </h2>
                        <p><strong>@string.Format("{0:N0} đ",item.Price)</strong></p>
                    </a>
                </article>
            }
        </section>
        <p class="text-center"><a asp-controller="Toy" asp-action="Index">Xem thêm &nbsp;<i class="fa fa-long-arrow-right"></i></a></p>

    </div>
</div>
