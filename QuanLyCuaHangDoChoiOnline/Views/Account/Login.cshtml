@model QuanLyCuaHangDoChoiOnline.Models.Account

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<h2 style="font-size: larger">Đăng nhập</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-route-returnurl="@returnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span class="text-danger field-validation-error" data-valmsg-replace="true">@ViewBag.ErrorMessage</span>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Tài khoản</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-size:19px">
                <input type="submit" value="Đăng nhập" class="btn btn-primary"/>
                <button asp-action="SignUp">Đăng kí</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Quay lại trang chủ</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
