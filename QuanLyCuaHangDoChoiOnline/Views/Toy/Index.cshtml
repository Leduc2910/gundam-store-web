@using QuanLyCuaHangDoChoiOnline.Models
@model dynamic

@{
    ViewData["Title"] = "Products";
}

<div id="main">
    <div class="inner">
        <h1>Sản phẩm</h1>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/banner-image-2-1920x500.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images//banner-image-3-1920x500.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/banner-image-4-1920x500.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <i class="carousel-control-next-icon" aria-hidden="true"></i>
                    <i class="sr-only">Next</i>
                </a>
            </div>
            <br />
            <br />
        <section class="tiles">
            @foreach (var item in Model.toy)
            {
                <article class="style1">
                    <span class="image">
                        <a asp-controller="Toy" asp-action="Details" asp-route-ID="@item.ToyID"><img src="/images/@item.Image" width="300" height="325" alt="" /></a>
                    </span>
                    <a asp-controller="Toy" asp-action="Details" asp-route-ID="@item.ToyID">
                        <h2>
                            @item.ToyName
                        </h2>
                        <p><strong>@string.Format("{0:N0} đ", item.Price)</strong></p>
                    </a>
                </article>
            }
        </section>
        <div class="row">
            <div class="col-sm-6">
                <div class="pagination">
                    @for (int i = 1; i <= Model.maxpage; i++)
                    {
                        if (i == Model.currentpage)
                        {
                            <a href="/Toy/@i" class="active">@i</a>
                        }
                        else
                        {
                            <a href="/Toy/@i">@i</a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>